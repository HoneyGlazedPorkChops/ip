<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="TOP_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="400.0" stylesheets="@../css/error-dialog.css" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" spacing="10">
    <children>
        <StackPane fx:id="messagePaneWrapper">
            <VBox fx:id="messagePane" spacing="5">
                <ImageView fx:id="messageImage" fitWidth="250" preserveRatio="true"/>
                <Label fx:id="dialog" text="Label" wrapText="true" minHeight="-Infinity"/>
            </VBox>
        </StackPane>

        <StackPane fx:id="avatarWrapper"
                   styleClass="avatar"
                   maxHeight="70.0"
                   maxWidth="70.0"
                   prefHeight="70.0"
                   prefWidth="70.0">
            <ImageView fx:id="displayPicture"
                       fitHeight="70.0"
                       fitWidth="70.0"
                       preserveRatio="true" />
        </StackPane>
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>
